@page
@model RazorPagesIgnis.Pages.Projects.AssignModel

@{
    ViewData["Title"] = "Assign Technician";
}

<h1>Assign Technician</h1>

<h4>Project</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician[0].Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Technician) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
            <form method="post" asp-route-id="@Model.Project.ID" asp-route-technicianID="@item.ID">
                <!-- <input type="hidden" asp-route-id="@item.ID" /> -->
                <input type="submit" value="Select" class="btn btn-danger" />
            </form>
            </td>   
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}