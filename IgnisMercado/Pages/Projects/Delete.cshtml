@page
@model RazorPagesIgnis.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Seguro que quieres eliminar el proyecto?</h3>
<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Specialty)
        </dd>
        <dt class="col-sm-2">
            Nivel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Level)
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Description)
        </dd>
        <dt class="col-sm-2">
        Nº de horas
            @Html.DisplayNameFor(model => model.Project.NHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.NHours)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Client.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Project.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>
