@page
@model RazorPagesIgnis.Pages.Projects.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Proyecto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Project.ID" />
            <div class="form-group">
                <label asp-for="Project.Specialty" class="control-label">Especialidad</label>
                <input asp-for="Project.Specialty" class="form-control" />
                <span asp-validation-for="Project.Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Level" class="control-label">Nivel</label>
                <input asp-for="Project.Level" class="form-control" />
                <span asp-validation-for="Project.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Description" class="control-label">Descripci√≥n</label>
                <input asp-for="Project.Description" class="form-control" />
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.NHours" class="control-label">Cantidad de horas</label>
                <input asp-for="Project.NHours" class="form-control" />
                <span asp-validation-for="Project.NHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
